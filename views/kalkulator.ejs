<%- include('includes/header.ejs') %>
    <link rel="stylesheet" href="/css/kalkulator.css">
    <link rel="stylesheet" href="/css/buttons.css">
    <link rel="stylesheet" href="/css/fooldal.css">
    <script src="https://unpkg.com/vue@next" defer></script>
    <script src="/js/kalkulator.js" defer></script>

    <body>
        <%- include('includes/navbar_fooldal.ejs') %>
            <h1 class="h1-responsive font-weight-bold mt-sm-5 text-center title" style="color: white;">Kerék magasság kalkulátor</h1>
            <form method="post" action="/kalkulator" class="centered">
                <div id="kalkulator" class="justify-content-center centered">
                    <img src="https://electricscooterparts.com/graphics/wheel-diameter2.png" class="landscape">
                    <input v-model='szelesseg' maxlength='3' id="szelesseg" name="szelesseg" type="text" class="gumi_input" maxlength="3" />
                    <p style="color: white;">/</p>
                    <input v-model='oldalfal' maxlength='2' id="oldalfal" name="oldalfal" type="text" class="oldalfal" maxlength="2" />
                    <p style="color: white;">R</p>
                    <input v-model='magassag' maxlength='2' id="magassag" name="magassag" type="text" class="magassag" maxlength="2" />
                    <div v-if="magassag_validate == true && oldalfal_validate == true && szelesseg_validate == true">
                        <div class="centered keresBTN">
                            <button type="submit" class="join_btn joinform">Számítás</button>
                        </div>
                    </div>
                    <div v-else-if="magassag_validate == false || oldalfal_validate == false || szelesseg_validate == false">
                        <div class="centered keresBTN">
                            <button disabled type="button" class="disabled">Számítás</button>
                        </div>
                    </div>
                    <% if (Eredmeny !=undefined) {%>
                        <p style="color: white;">Számított kerékmagasság: <%= Eredmeny%> cm</p>
                        <% } %>
                </div>
            </form>


    </body>
    <%- include('includes/footer.ejs') %>