<%- include('includes/header.ejs') %>
    <link rel="stylesheet" href="/css/fooldal.css">
    <link rel="stylesheet" href="/css/buttons.css">
    <link rel="stylesheet" href="/css/card.css">
    <script src="/js/fooldal.js" defer></script>

    <body>
        <%- include('includes/navbar_vendeg.ejs') %>
            <h1 class="font">Kérdezze le a járművet</h1>
            <form action="/vendeg" method="post">
                <div>
                    <input maxlength='7' value='ABC-123' class="rendszam" id="rendszam" name="rendszam" type="text" />
                </div>
                <div class="centered keresBTN">
                    <button type="submit" class="join_btn joinform">Keresés</button>
                </div>

                <% if (lekerderedm_vendeg !=undefined) {%>
                    <div class="card" style="background-image: url('<%= lekerderedm_vendeg.Kepcim %>');">
                        <div class="card-body" style="display: block;">
                            <div class="card-container">
                                <div class="mobile-only image-div"
                                    style="background-image: url('<%= lekerderedm_vendeg.Kepcim %>');">
                                </div>
                                <div class="card-container-left">
                                    <h1 class="card-title">
                                        <%= lekerderedm_vendeg.Gyarto %>
                                            <%= lekerderedm_vendeg.Tipus %>
                                    </h1>
                                    <h5>Évjárat:
                                        <%= lekerderedm_vendeg.Evjarat %>
                                    </h5>
                                    <h5>Állapot:
                                        <%= lekerderedm_vendeg.Allapot %>
                                    </h5>
                                    <h5>Futott km:
                                        <%= lekerderedm_vendeg.Futottkm %>
                                    </h5>

                                </div>
                                <div class="card-container-right">
                                    <div class="mobile-only">
                                        <h1 class="card-title">
                                            <%= lekerderedm_vendeg.Gyarto %>
                                                <%= lekerderedm_vendeg.Tipus %>
                                        </h1>
                                        <h5>Évjárat:
                                            <%= lekerderedm_vendeg.Evjarat %>
                                        </h5>
                                        <h5>Állapot:
                                            <%= lekerderedm_vendeg.Allapot %>
                                        </h5>
                                        <h5>Futott km:
                                            <%= lekerderedm_vendeg.Futottkm %>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% if (lekerderedm_vendeg==undefined && VendegKerdezettER==true) {%>
                                <article class="postcard dark red">
                                    <a class="postcard__img_link" href="#">
                                        <img class="postcard__img" src="img/felkiáltójel.jpg" alt="Image Title" />
                                    </a>
                                    <div class="postcard__text">
                                        <h1 class="postcard__title red">Sajnos az adatbázisunkban nincs ilyen rendszámú
                                            autó, próbáljon meg másikat vagy látogasson vissza később, adatbázisunk
                                            folyton frissül!</h1>
                                    </div>
                                </article>
                                <% } %>
            </form>
    </body>
    <%- include('includes/footer.ejs') %>